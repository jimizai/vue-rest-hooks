{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["lib/*"]
    }
  },
  "include": ["lib/**/*.ts", "index.ts"],
  "exclude": ["node_modules*"]
}